<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.ListActionView?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.xahla.musicx.desktop.views.pages.editor.genre.EditGenre"
      styleClass="box-container"
      spacing="10"
      alignment="CENTER">
    <HBox alignment="CENTER" spacing="30" styleClass="base-padding">
        <VBox spacing="5" alignment="CENTER">
            <Label text="%genreEdit.primaryGenres" styleClass="text-caption" />
            <HBox spacing="5">
                <TextField fx:id="primaryGenreField"
                           styleClass="genre-text-field"
                           prefHeight="30"
                />
                <Button onAction="#proposePrimaryGenre">
                    <graphic>
                        <FontIcon iconLiteral="fltfal-add-28" />
                    </graphic>
                </Button>
            </HBox>
            <ListActionView fx:id="primaryGenresList" prefHeight="400" styleClass="transparent-list" />
        </VBox>

        <VBox spacing="5" alignment="CENTER">
            <Label text="%genreEdit.secondaryGenres" styleClass="text-caption" />
            <HBox spacing="5">
                <TextField fx:id="secondaryGenreField"
                           styleClass="genre-text-field"
                           prefHeight="30"
                />
                <Button onAction="#proposeSecondaryGenre">
                    <graphic>
                        <FontIcon iconLiteral="fltfal-add-28" />
                    </graphic>
                </Button>
            </HBox>
            <ListActionView fx:id="secondaryGenresList" prefHeight="400" styleClass="transparent-list" />
        </VBox>
    </HBox>

    <Button fx:id="editButton" onAction="#edit" disable="true" text="OK" />
</VBox>