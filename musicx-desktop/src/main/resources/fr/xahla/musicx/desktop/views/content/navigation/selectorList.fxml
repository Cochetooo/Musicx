<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.GridPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<GridPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="fr.xahla.musicx.desktop.views.content.navigation.SelectorList"
        styleClass="box-container"
        prefHeight="900">
    <ListView fx:id="selectorListView" prefWidth="320" prefHeight="900"
        style="-fx-background-color: transparent;"
        onMouseClicked="#onListClick"
    >
        <contextMenu>
            <ContextMenu>
                <items>
                    <!-- Play now -->
                    <MenuItem
                        text="%selectorList.playNow"
                        onAction="#playNow">
                        <graphic>
                            <FontIcon iconLiteral="fltfmz-play-48" />
                        </graphic>
                    </MenuItem>

                    <!-- Play shuffled -->
                    <MenuItem
                        text="%selectorList.playShuffled"
                        onAction="#playShuffled">
                        <graphic>
                            <FontIcon iconLiteral="fltfmz-play-48" />
                        </graphic>
                    </MenuItem>
                </items>
            </ContextMenu>
        </contextMenu>
    </ListView>
</GridPane>