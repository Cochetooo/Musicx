<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:file:./resources/database/libraries</property>
        <property name="connection.username">sa</property>
        <property name="connection.password" />

        <property name="hibernate.default_schema">PUBLIC</property>

        <property name="connection.pool_size">1</property>

        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

        <!-- H2 configuration -->
        <property name="hbm2ddl.auto">update</property>

        <!-- Configuration de la console H2 -->
        <property name="show_sql">true</property>

        <!-- Activation de la console H2 -->
        <property name="hibernate.h2.console.enabled">true</property>
        <property name="hibernate.h2.console.port">8082</property>

        <!-- Mapping files -->

        <mapping class="fr.xahla.musicx.core.model.entity.Library"/>
        <mapping class="fr.xahla.musicx.core.model.entity.Song"/>
        <mapping class="fr.xahla.musicx.core.model.entity.Artist" />
        <mapping class="fr.xahla.musicx.core.model.entity.Album" />

    </session-factory>
</hibernate-configuration>